<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_marginStart="20dp"
        android:id="@+id/card_1"
        android:layout_width="150dp"
        android:background="@drawable/ripple_payholic1"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_payholic1"
            android:gravity="center_vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/biko_bold"
                    android:text="1 Months"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/biko_regular"
                    android:text="Price"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/biko_regular"
                    android:text="Rp. 1.000.000,00"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="150dp"
            android:background="@drawable/ripple_payholic2"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/ripple_payholic2"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Months"
                        android:fontFamily="@font/biko_bold"
                        android:textColor="@color/white"
                        android:textSize="11sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:fontFamily="@font/biko_regular"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 1.000.000,00"
                        android:fontFamily="@font/biko_regular"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/card_3"
               android:layout_width="150dp"
               android:background="@drawable/ripple_payholic3"
               android:layout_height="100dp"
               android:layout_margin="8dp"
               app:cardCornerRadius="10dp">
               <LinearLayout
                   android:gravity="center_vertical"
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:background="@drawable/ripple_payholic3"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:layout_marginTop="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="6 Months"
                           android:fontFamily="@font/biko_bold"
                           android:textColor="@color/white"
                           android:textSize="11sp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Price"
                           android:fontFamily="@font/biko_regular"
                           android:textColor="@color/white"
                           android:textSize="10sp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Rp. 1.000.000,00"
                           android:fontFamily="@font/biko_regular"
                           android:textColor="@color/white"
                           android:textSize="10sp"/>
                   </LinearLayout>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/card_4"
               android:layout_width="150dp"
               android:background="@drawable/ripple_payholic4"
               android:layout_height="100dp"
               android:layout_margin="8dp"
               app:cardCornerRadius="10dp">
               <LinearLayout
                   android:gravity="center_vertical"
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:background="@drawable/ripple_payholic4"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:layout_marginTop="10dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="12 Months"
                           android:fontFamily="@font/biko_bold"
                           android:textColor="@color/white"
                           android:textSize="11sp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Price"
                           android:fontFamily="@font/biko_regular"
                           android:textColor="@color/white"
                           android:textSize="10sp"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Rp. 1.000.000,00"
                           android:fontFamily="@font/biko_regular"
                           android:textColor="@color/white"
                           android:textSize="10sp"/>
                   </LinearLayout>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
       </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>