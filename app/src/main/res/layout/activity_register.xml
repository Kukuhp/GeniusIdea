<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Register">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/genius_idea_semarang_splash"
        android:scaleType="centerCrop"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#BB333131">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_geniusidea" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange2"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="@font/biko_bold"
            android:text="Genius Idea Coworking"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#AA777474"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/biko_bold"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_form_login"
                    android:fontFamily="@font/biko_regular"
                    android:hint="Full Name"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:outlineProvider="none"
                    android:paddingLeft="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_form_login"
                    android:fontFamily="@font/biko_regular"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:letterSpacing="0.1"
                    android:outlineProvider="none"
                    android:paddingLeft="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edPerusahaan"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_form_login"
                    android:fontFamily="@font/biko_regular"
                    android:hint="Company Name"
                    android:inputType="textEmailAddress"
                    android:letterSpacing="0.1"
                    android:outlineProvider="none"
                    android:paddingLeft="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edJabatan"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_form_login"
                    android:fontFamily="@font/biko_regular"
                    android:hint="Position"
                    android:inputType="textEmailAddress"
                    android:letterSpacing="0.1"
                    android:outlineProvider="none"
                    android:paddingLeft="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />



                    <EditText
                        android:id="@+id/edAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_form_login"
                        android:fontFamily="@font/biko_regular"
                        android:hint="Company Address"
                        android:inputType="textMultiLine"
                        android:letterSpacing="0.1"
                        android:outlineProvider="none"
                        android:paddingLeft="14dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />

                    <!--<ImageView
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/ic_down_white"/>-->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/login_pass"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_form_login"
                        android:fontFamily="@font/biko_regular"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:letterSpacing="0.1"
                        android:outlineProvider="none"
                        android:paddingLeft="14dp"
                        android:paddingEnd="34dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/hidePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/ic_visibility_black_24dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/showPaswrod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/ic_visibility_off_black_24dp"
                        android:visibility="gone" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/retypePass"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_form_login"
                    android:fontFamily="@font/biko_regular"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:letterSpacing="0.1"
                    android:outlineProvider="none"
                    android:paddingLeft="14dp"
                    android:paddingEnd="34dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/dark_grey2"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/biko_black"
                        android:text="Register"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </ScrollView>
</RelativeLayout>